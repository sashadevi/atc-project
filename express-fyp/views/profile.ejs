<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>ATC Application</title>
  </head>
  <body>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href='#'><%= title %> Application</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/settings">Settings</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/transcribe">Transcription</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/transcribe/template">Example Transcription</a>
                </li>
                </ul>
            </div>
        </div>
    </nav> 

    <div class="container">
      <h1>Profile</h1>
      <form>
        <div class="container">
          <h3>Upload profile picture</h3>
        </div>
        <div class="input-group mb-3 container">
          <label class="input-group-text" for="profilePicture">Upload</label>
          <input type="file" class="form-control" id="profilePicture">
        </div>
        <div class="mb-3 container">
          <label for="firstName" class="form-label">First Name</label>
          <input type="text" class="form-control" id="firstName">
        </div>
        <div class="mb-3 container">
          <label for="lastName" class="form-label">Last Name</label>
          <input type="text" class="form-control" id=lastName>
        </div>
        <div class="mb-3 container">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email">
        </div>
        <div class="mb-3 container">
          <label for="phone" class="form-label">Phone</label>
          <input type="tel" class="form-control" id="phone">
        </div>
        <div class="form-check container">
          <input class="form-check-input" type="radio" name="occupation" id="airTrafficController" checked>
          <label class="form-check-label" for="airTrafficController">ATC</label>
        </div>
        <div class="form-check container">
          <input class="form-check-input" type="radio" name="occupation" id="pilot">
          <label class="form-check-label" for="pilot">Pilot</label>
        </div>
        <div class="mb-3 container">
          <label for="company" class="form-label">Airline/Company Name</label>
          <input type="text" class="form-control" id="company">
        </div>
        <div class="mb-3 container">
          <label for="position" class="form-label">Position</label>
          <input type="text" class="form-control" id="position">
        </div>
        <div class="container">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
    
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>