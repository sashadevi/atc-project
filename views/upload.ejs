        <div class="card mb-3">
            <div class="row">
                <h2 class="text-center"> Upload a file </h2>
                <div class="col-md">
                <div class="d-flex justify-content-center">
                        <form action="/transcribe/uploadfile" enctype="multipart/form-data" method="POST"> 
                            <div class="input-group mb-3 container">
                                <input type="file" class="form-control" name="myFile" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Upload File</button>
                            </div>   
                        </form>
                </div>
                <div class="d-flex justify-content-center">
                    <p>Note: Only .wav files can be uploaded</p>
                </div>
            </div>
        </div>

  
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
